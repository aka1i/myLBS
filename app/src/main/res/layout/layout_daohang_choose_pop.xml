<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@drawable/white_corner_pink_line_bg"
           android:layout_margin="10dp">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/white_corner_pink_line_bg"
                  android:padding="10dp"
                  android:orientation="horizontal">
                     <LinearLayout
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:orientation="vertical">
                            <EditText
                                android:id="@+id/edit_text_start"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:focusableInTouchMode="false"
                                android:focusable="false"
                                android:background="@drawable/seleted_bg"
                                android:hint="起点"/>

                            <EditText
                                android:id="@+id/edit_text_end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:padding="5dp"
                                android:focusableInTouchMode="false"
                                android:focusable="false"
                                android:background="@drawable/unseleted_bg"
                                android:hint="终点"/>
                     </LinearLayout>
                     <ImageView
                         android:id="@+id/daohang_button"
                         android:src="@drawable/go"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="10dp"
                         android:layout_marginRight="10dp"
                         android:layout_gravity="center_vertical"/>
              </LinearLayout>
              <ScrollView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_marginBottom="15dp">


                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/daohang_position_r0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bottom_line_rl">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginStart="10dp"
                                       android:drawableLeft="@drawable/text_me"
                                       android:drawablePadding="5dp"
                                       android:gravity="center"
                                       android:text="我的位置"
                                       android:textSize="16sp" />


                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp">

                                   <com.example.map.customView.MyButton
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_alignParentTop="true"
                                       android:layout_marginTop="0dp"
                                       android:background="@drawable/red_corner_button"
                                       android:text="我的位置"
                                       android:textColor="@color/white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/daohang_position_r1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bottom_line_rl">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginStart="10dp"
                                       android:drawableLeft="@drawable/text_comment"
                                       android:gravity="center"
                                       android:text="公共楼"
                                       android:drawablePadding="5dp"

                                       android:textSize="16sp" />


                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="160dp">
                                   <android.support.v7.widget.RecyclerView
                                       android:id="@+id/pop_rl_1"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/daohang_position_r2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bottom_line_rl">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginStart="10dp"
                                       android:drawableLeft="@drawable/text_canteen"
                                       android:gravity="center"
                                       android:text="食堂"
                                       android:drawablePadding="5dp"
                                       android:textSize="16sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                   <android.support.v7.widget.RecyclerView
                                       android:id="@+id/pop_rl_2"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/daohang_position_r3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bottom_line_rl">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginStart="10dp"
                                       android:drawableLeft="@drawable/text_scenic_spot"
                                       android:gravity="center"
                                       android:text="景点"
                                       android:drawablePadding="5dp"
                                       android:textSize="16sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="60dp">
                                   <android.support.v7.widget.RecyclerView
                                       android:id="@+id/pop_rl_3"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content" />
                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/daohang_position_r4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bottom_line_rl">

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_centerVertical="true"
                                       android:layout_marginLeft="10dp"
                                       android:layout_marginStart="10dp"
                                       android:padding="8dp"
                                       android:text="其他"
                                       android:drawableLeft="@drawable/text_others"
                                       android:drawablePadding="5dp"
                                       android:textSize="16sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                >
                                   <android.support.v7.widget.RecyclerView
                                       android:id="@+id/pop_rl_4"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content" />
                            </RelativeLayout>
                     </LinearLayout>

              </ScrollView>
       </LinearLayout>

</LinearLayout>
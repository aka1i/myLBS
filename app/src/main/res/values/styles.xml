<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="main_menu_photo_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top__in_anim</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom_out_anim</item>
    </style>

    <style name="left_to_right_anim">
        <item name="android:windowEnterAnimation">@anim/left_to_right_in_anim</item>
        <item name="android:windowExitAnimation">@anim/left_to_right_out_anim</item>
    </style>


    <style name="top_in_top_out_anim">
        <item name="android:windowEnterAnimation">@anim/top_to_bottom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_top_out_anim</item>
    </style>
</resources>
